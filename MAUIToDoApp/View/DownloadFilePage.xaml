<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MAUIToDoApp.ViewModel"
             x:Class="MAUIToDoApp.View.DownloadFilePage"
             x:DataType="vm:DownloadFileViewModel"
             Title="DownloadFilePage">
    <VerticalStackLayout>
        <Label 
            Text="{Binding ElapsedTime}"/>
        <Button
            Text="Download File"
            Command="{Binding DownloadFileCommand}"/>
    </VerticalStackLayout>
</ContentPage>
