<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MAUIToDoApp.ViewModel"
             x:Class="MAUIToDoApp.View.MathematicalCalcPage"
             x:DataType="vm:MathematicalCalcPageViewModel"
             Title="MathematicalCalcPage">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label
            Text="{Binding StopwatchTime}"/>
        <Button
            Grid.Row="1"
            Text="Calculate"
            Command="{Binding MathematicalCalcCommand}"/>  
    </Grid>
    
</ContentPage>
